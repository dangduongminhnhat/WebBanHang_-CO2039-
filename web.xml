        <url-pattern>/a-r</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetProductDetailsServlet</servlet-name>
        <servlet-class>com.example.servlet.user.GetProductDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetProductDetailsServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetProfileServlet</servlet-name>
        <servlet-class>com.example.servlet.user.GetProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    
    <servlet>
